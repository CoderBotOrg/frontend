// Application Styling
// Import then overwrite the default style

// Variables
@import '~vuetify/src/stylus/settings/_variables'

$body-font-family = 'Open Sans'
$heading-font-family = 'Overpass'
$button-font-weight = 600
$list-title-font-weight = 600
$navigation-drawer-item-font-size = 40px

$font-weights = {
	medium: 600,
}

// Components
@import '~vuetify/src/stylus/main'

h3
	font-size: 20px
	font-family: 'Overpass'


.v-toolbar__title
	font-family: 'Overpass'
	font-size: 24px
	
.v-tabs__div
	font-size: 15px
	font-weight: 600
	
.v-navigation-drawer
	.v-list .v-list__tile
		font-weight: 500
		font-size: 16px

.v-icon
	font-weight: 500